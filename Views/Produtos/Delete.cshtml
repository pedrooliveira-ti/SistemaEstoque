@model ControleEstoqueRoupas.Models.Produto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Excluir Produto";
}

<h2>Excluir Produto</h2>

<div class="alert alert-danger">Tem certeza que deseja excluir este produto?</div>
<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>
    <dt class="col-sm-2">Cor</dt>
    <dd class="col-sm-10">@Model.CodigoCor</dd>
    <dt class="col-sm-2">Quantidade</dt>
    <dd class="col-sm-10">@Model.Quantidade</dd>
    <dt class="col-sm-2">Tamanho</dt>
    <dd class="col-sm-10">@Model.Tamanho</dd>
    @if (!string.IsNullOrEmpty(Model.CaminhoImagem)) {
        <dt class="col-sm-2">Imagem</dt>
        <dd class="col-sm-10"><img src="@Model.CaminhoImagem" alt="Imagem do Produto" style="max-width:200px; max-height:200px;" /></dd>
    }
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
