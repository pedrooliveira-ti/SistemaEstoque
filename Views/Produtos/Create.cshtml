
@model ControleEstoqueRoupas.Models.Produto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Cadastrar Produto";
}

<h2>Cadastrar Produto</h2>

<div class="mb-3">
    <strong>Exemplo de imagem salva no sistema:</strong><br />
    <img src="/imagens/exemplo-teste.jpg" alt="Exemplo de Imagem" style="max-width:200px; max-height:200px; border:1px solid #ccc; margin-bottom:10px;" />
</div>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" />
    </div>
    <div class="form-group">
        <label for="CodigoCor">Cor</label>
        <input type="text" class="form-control" id="CodigoCor" name="CodigoCor" value="@Model.CodigoCor" />
    </div>
    <div class="form-group">
        <label for="Quantidade">Quantidade</label>
        <input type="number" class="form-control" id="Quantidade" name="Quantidade" value="@Model.Quantidade" />
    </div>
    <div class="form-group">
        <label for="Tamanho">Tamanho</label>
        <input type="text" class="form-control" id="Tamanho" name="Tamanho" value="@Model.Tamanho" />
    </div>
    <div class="form-group">
        <label for="Imagem">Imagem</label>
        <input type="file" name="Imagem" class="form-control" accept="image/*" onchange="previewFoto(event)" />
        <img id="preview" src="#" alt="Preview da Imagem" style="display:none; max-width:200px; max-height:200px; margin-top:10px;" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Salvar Produto</button>
</form>

<script>
function previewFoto(event) {
    var reader = new FileReader();
    reader.onload = function(){
        var output = document.getElementById('preview');
        output.src = reader.result;
        output.style.display = 'block';
    };
    if(event.target.files[0]) {
        reader.readAsDataURL(event.target.files[0]);
    }
}
</script>
